<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.andrey4623.discount_cards_api.app.Card" table="cards">
        <id name="number" type="java.lang.Long">
            <column name="number" />
        </id>
        <property name="value" type="java.lang.Float">
            <column name="value" not-null="true" />
        </property>
        <property name="discount" type="java.lang.Float">
            <column name="discount" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>
